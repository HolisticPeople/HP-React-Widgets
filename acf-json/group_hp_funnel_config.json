{
    "key": "group_hp_funnel_config",
    "title": "Funnel Configuration",
    "fields": [
        {
            "key": "field_funnel_tab_general",
            "label": "General",
            "name": "",
            "type": "tab",
            "placement": "top"
        },
        {
            "key": "field_funnel_slug",
            "label": "Funnel Slug",
            "name": "funnel_slug",
            "type": "text",
            "instructions": "Unique identifier used in shortcodes. Example: illumodine",
            "required": 1,
            "wrapper": {
                "width": "50"
            }
        },
        {
            "key": "field_funnel_status",
            "label": "Status",
            "name": "funnel_status",
            "type": "select",
            "instructions": "Inactive funnels will not render on the frontend.",
            "choices": {
                "active": "Active",
                "inactive": "Inactive"
            },
            "default_value": "active",
            "wrapper": {
                "width": "25"
            }
        },
        {
            "key": "field_funnel_stripe_mode",
            "label": "Stripe Mode",
            "name": "stripe_mode",
            "type": "select",
            "instructions": "Override Stripe mode for this funnel.",
            "choices": {
                "auto": "Auto (based on environment)",
                "test": "Test Mode",
                "live": "Live Mode"
            },
            "default_value": "auto",
            "wrapper": {
                "width": "25"
            }
        },
        {
            "key": "field_funnel_tab_hero",
            "label": "Hero Section",
            "name": "",
            "type": "tab",
            "placement": "top"
        },
        {
            "key": "field_hero_title",
            "label": "Title",
            "name": "hero_title",
            "type": "text",
            "instructions": "Main headline displayed in the hero section.",
            "required": 1,
            "wrapper": {
                "width": "50"
            }
        },
        {
            "key": "field_hero_subtitle",
            "label": "Subtitle",
            "name": "hero_subtitle",
            "type": "text",
            "instructions": "Secondary headline below the title.",
            "wrapper": {
                "width": "50"
            }
        },
        {
            "key": "field_hero_tagline",
            "label": "Tagline",
            "name": "hero_tagline",
            "type": "text",
            "instructions": "Short tagline or product category."
        },
        {
            "key": "field_hero_description",
            "label": "Description",
            "name": "hero_description",
            "type": "textarea",
            "instructions": "Longer description text for the hero section.",
            "rows": 3
        },
        {
            "key": "field_hero_image",
            "label": "Hero Image",
            "name": "hero_image",
            "type": "image",
            "instructions": "Main product image displayed in the hero section.",
            "return_format": "url",
            "preview_size": "medium",
            "wrapper": {
                "width": "50"
            }
        },
        {
            "key": "field_hero_logo",
            "label": "Logo",
            "name": "hero_logo",
            "type": "image",
            "instructions": "Brand logo displayed in the header.",
            "return_format": "url",
            "preview_size": "thumbnail",
            "wrapper": {
                "width": "50"
            }
        },
        {
            "key": "field_hero_logo_link",
            "label": "Logo Link",
            "name": "hero_logo_link",
            "type": "url",
            "instructions": "URL the logo links to. Leave empty for homepage.",
            "wrapper": {
                "width": "50"
            }
        },
        {
            "key": "field_hero_cta_text",
            "label": "CTA Button Text",
            "name": "hero_cta_text",
            "type": "text",
            "instructions": "Text displayed on the call-to-action button.",
            "default_value": "Get Your Special Offer Now",
            "wrapper": {
                "width": "50"
            }
        },
        {
            "key": "field_hero_benefits_title",
            "label": "Benefits Section Title",
            "name": "hero_benefits_title",
            "type": "text",
            "instructions": "Heading for the benefits section.",
            "default_value": "Why Choose Us?"
        },
        {
            "key": "field_hero_benefits",
            "label": "Benefits",
            "name": "hero_benefits",
            "type": "repeater",
            "instructions": "List of benefits/features displayed below the hero.",
            "layout": "table",
            "button_label": "Add Benefit",
            "sub_fields": [
                {
                    "key": "field_benefit_text",
                    "label": "Benefit",
                    "name": "text",
                    "type": "text"
                }
            ]
        },
        {
            "key": "field_funnel_tab_products",
            "label": "Products",
            "name": "",
            "type": "tab",
            "placement": "top"
        },
        {
            "key": "field_funnel_products",
            "label": "Products",
            "name": "funnel_products",
            "type": "repeater",
            "instructions": "Products available in this funnel. First product is selected by default.",
            "layout": "block",
            "button_label": "Add Product",
            "sub_fields": [
                {
                    "key": "field_product_lookup",
                    "label": "Search Product",
                    "name": "product_lookup",
                    "type": "post_object",
                    "instructions": "Search for a WooCommerce product to auto-fill the fields below.",
                    "post_type": ["product"],
                    "taxonomy": [],
                    "allow_null": 1,
                    "multiple": 0,
                    "return_format": "id",
                    "ui": 1,
                    "wrapper": {
                        "width": "100",
                        "class": "hp-product-lookup"
                    }
                },
                {
                    "key": "field_product_sku",
                    "label": "Product SKU",
                    "name": "sku",
                    "type": "text",
                    "instructions": "WooCommerce product SKU.",
                    "required": 1,
                    "wrapper": {
                        "width": "25",
                        "class": "hp-product-sku"
                    }
                },
                {
                    "key": "field_product_display_name",
                    "label": "Display Name",
                    "name": "display_name",
                    "type": "text",
                    "instructions": "Override the product name. Leave empty to use WooCommerce name.",
                    "placeholder": "(auto-filled from product)",
                    "wrapper": {
                        "width": "25",
                        "class": "hp-product-name"
                    }
                },
                {
                    "key": "field_product_display_price",
                    "label": "Display Price",
                    "name": "display_price",
                    "type": "number",
                    "instructions": "Override the displayed price. Leave empty to use WooCommerce price.",
                    "placeholder": "(auto-filled)",
                    "wrapper": {
                        "width": "25",
                        "class": "hp-product-price"
                    }
                },
                {
                    "key": "field_product_badge",
                    "label": "Badge",
                    "name": "badge",
                    "type": "text",
                    "instructions": "Badge text (e.g., 'BEST VALUE', 'POPULAR').",
                    "wrapper": {
                        "width": "25"
                    }
                },
                {
                    "key": "field_product_description",
                    "label": "Description",
                    "name": "description",
                    "type": "text",
                    "instructions": "Short description for this product option.",
                    "wrapper": {
                        "width": "50"
                    }
                },
                {
                    "key": "field_product_is_best_value",
                    "label": "Best Value",
                    "name": "is_best_value",
                    "type": "true_false",
                    "instructions": "Highlight this as the best value option.",
                    "ui": 1,
                    "wrapper": {
                        "width": "25"
                    }
                },
                {
                    "key": "field_product_image",
                    "label": "Image Override",
                    "name": "image",
                    "type": "image",
                    "instructions": "Override product image. Leave empty to use WooCommerce image.",
                    "return_format": "id",
                    "preview_size": "thumbnail",
                    "wrapper": {
                        "width": "25",
                        "class": "hp-product-image"
                    }
                },
                {
                    "key": "field_product_features",
                    "label": "Features",
                    "name": "features",
                    "type": "repeater",
                    "instructions": "Feature bullets for this product option.",
                    "layout": "table",
                    "button_label": "Add Feature",
                    "sub_fields": [
                        {
                            "key": "field_feature_text",
                            "label": "Feature",
                            "name": "text",
                            "type": "text"
                        }
                    ]
                },
                {
                    "key": "field_product_free_item_sku",
                    "label": "Free Item SKU",
                    "name": "free_item_sku",
                    "type": "text",
                    "instructions": "SKU of a free item included with this product (for bundles).",
                    "wrapper": {
                        "width": "50"
                    }
                },
                {
                    "key": "field_product_free_item_qty",
                    "label": "Free Item Qty",
                    "name": "free_item_qty",
                    "type": "number",
                    "instructions": "Quantity of free items.",
                    "default_value": 1,
                    "wrapper": {
                        "width": "50"
                    }
                }
            ]
        },
        {
            "key": "field_funnel_tab_checkout",
            "label": "Checkout",
            "name": "",
            "type": "tab",
            "placement": "top"
        },
        {
            "key": "field_checkout_url",
            "label": "Checkout Page URL",
            "name": "checkout_url",
            "type": "text",
            "instructions": "URL or path to the checkout page. Example: /illumodine-checkout/"
        },
        {
            "key": "field_checkout_free_shipping_countries",
            "label": "Free Shipping Countries",
            "name": "free_shipping_countries",
            "type": "checkbox",
            "instructions": "Countries that qualify for free shipping.",
            "choices": {
                "US": "United States",
                "CA": "Canada",
                "GB": "United Kingdom",
                "AU": "Australia",
                "NZ": "New Zealand",
                "DE": "Germany",
                "FR": "France",
                "IT": "Italy",
                "ES": "Spain",
                "NL": "Netherlands"
            },
            "default_value": ["US"],
            "layout": "horizontal"
        },
        {
            "key": "field_checkout_global_discount",
            "label": "Global Discount Percent",
            "name": "global_discount_percent",
            "type": "number",
            "instructions": "Percentage discount applied to eligible products (0-100).",
            "min": 0,
            "max": 100,
            "default_value": 0,
            "wrapper": {
                "width": "33"
            }
        },
        {
            "key": "field_checkout_enable_points",
            "label": "Enable Points Redemption",
            "name": "enable_points_redemption",
            "type": "true_false",
            "instructions": "Allow customers to redeem YITH points during checkout.",
            "ui": 1,
            "default_value": 1,
            "wrapper": {
                "width": "33"
            }
        },
        {
            "key": "field_checkout_show_order_summary",
            "label": "Show Order Summary",
            "name": "show_order_summary",
            "type": "true_false",
            "instructions": "Display order summary during checkout.",
            "ui": 1,
            "default_value": 1,
            "wrapper": {
                "width": "33"
            }
        },
        {
            "key": "field_funnel_tab_thankyou",
            "label": "Thank You",
            "name": "",
            "type": "tab",
            "placement": "top"
        },
        {
            "key": "field_thankyou_url",
            "label": "Thank You Page URL",
            "name": "thankyou_url",
            "type": "text",
            "instructions": "URL or path to the thank you page. Example: /illumodine-thank-you/"
        },
        {
            "key": "field_thankyou_headline",
            "label": "Headline",
            "name": "thankyou_headline",
            "type": "text",
            "instructions": "Main headline on the thank you page.",
            "default_value": "Thank You for Your Order!"
        },
        {
            "key": "field_thankyou_message",
            "label": "Message",
            "name": "thankyou_message",
            "type": "textarea",
            "instructions": "Message displayed below the headline.",
            "rows": 2
        },
        {
            "key": "field_thankyou_show_upsell",
            "label": "Show Upsell",
            "name": "show_upsell",
            "type": "true_false",
            "instructions": "Display a one-click upsell offer on the thank you page.",
            "ui": 1,
            "default_value": 0
        },
        {
            "key": "field_upsell_group",
            "label": "Upsell Configuration",
            "name": "upsell_config",
            "type": "group",
            "instructions": "Configure the upsell offer.",
            "conditional_logic": [
                [
                    {
                        "field": "field_thankyou_show_upsell",
                        "operator": "==",
                        "value": "1"
                    }
                ]
            ],
            "sub_fields": [
                {
                    "key": "field_upsell_sku",
                    "label": "Upsell Product SKU",
                    "name": "sku",
                    "type": "text",
                    "instructions": "SKU of the upsell product.",
                    "wrapper": {
                        "width": "33"
                    }
                },
                {
                    "key": "field_upsell_qty",
                    "label": "Quantity",
                    "name": "qty",
                    "type": "number",
                    "instructions": "Number of items in the upsell offer.",
                    "default_value": 1,
                    "wrapper": {
                        "width": "33"
                    }
                },
                {
                    "key": "field_upsell_discount",
                    "label": "Discount Percent",
                    "name": "discount_percent",
                    "type": "number",
                    "instructions": "Discount applied to the upsell (0-100).",
                    "min": 0,
                    "max": 100,
                    "default_value": 0,
                    "wrapper": {
                        "width": "33"
                    }
                },
                {
                    "key": "field_upsell_headline",
                    "label": "Upsell Headline",
                    "name": "headline",
                    "type": "text",
                    "instructions": "Headline for the upsell offer.",
                    "default_value": "Wait! Special Offer Just For You!"
                },
                {
                    "key": "field_upsell_description",
                    "label": "Upsell Description",
                    "name": "description",
                    "type": "textarea",
                    "instructions": "Description text for the upsell offer.",
                    "rows": 2
                },
                {
                    "key": "field_upsell_image",
                    "label": "Upsell Image",
                    "name": "image",
                    "type": "image",
                    "instructions": "Custom image for the upsell. Leave empty to use product image.",
                    "return_format": "url",
                    "preview_size": "medium"
                }
            ]
        },
        {
            "key": "field_funnel_tab_styling",
            "label": "Styling",
            "name": "",
            "type": "tab",
            "placement": "top"
        },
        {
            "key": "field_style_accent_color",
            "label": "Accent Color",
            "name": "accent_color",
            "type": "color_picker",
            "instructions": "Primary accent color for buttons and highlights.",
            "default_value": "#eab308",
            "wrapper": {
                "width": "33"
            }
        },
        {
            "key": "field_style_background_type",
            "label": "Background Type",
            "name": "background_type",
            "type": "select",
            "choices": {
                "gradient": "Gradient (Dark)",
                "solid": "Solid Color",
                "image": "Background Image"
            },
            "default_value": "gradient",
            "wrapper": {
                "width": "33"
            }
        },
        {
            "key": "field_style_background_color",
            "label": "Background Color",
            "name": "background_color",
            "type": "color_picker",
            "instructions": "Background color (for solid background type).",
            "conditional_logic": [
                [
                    {
                        "field": "field_style_background_type",
                        "operator": "==",
                        "value": "solid"
                    }
                ]
            ],
            "wrapper": {
                "width": "33"
            }
        },
        {
            "key": "field_style_background_image",
            "label": "Background Image",
            "name": "background_image",
            "type": "image",
            "instructions": "Background image (for image background type).",
            "return_format": "url",
            "conditional_logic": [
                [
                    {
                        "field": "field_style_background_type",
                        "operator": "==",
                        "value": "image"
                    }
                ]
            ],
            "wrapper": {
                "width": "33"
            }
        },
        {
            "key": "field_style_custom_css",
            "label": "Custom CSS",
            "name": "custom_css",
            "type": "textarea",
            "instructions": "Custom CSS to apply to this funnel. Use .hp-funnel-{slug} as the root selector.",
            "rows": 6,
            "new_lines": ""
        },
        {
            "key": "field_funnel_tab_footer",
            "label": "Footer",
            "name": "",
            "type": "tab",
            "placement": "top"
        },
        {
            "key": "field_footer_text",
            "label": "Footer Text",
            "name": "footer_text",
            "type": "text",
            "instructions": "Copyright or company text.",
            "default_value": "Â© 2024 HolisticPeople.com"
        },
        {
            "key": "field_footer_disclaimer",
            "label": "Disclaimer",
            "name": "footer_disclaimer",
            "type": "textarea",
            "instructions": "Legal disclaimer text.",
            "default_value": "These statements have not been evaluated by the FDA. This product is not intended to diagnose, treat, cure or prevent any disease.",
            "rows": 2
        }
    ],
    "location": [
        [
            {
                "param": "post_type",
                "operator": "==",
                "value": "hp_funnel"
            }
        ]
    ],
    "menu_order": 0,
    "position": "normal",
    "style": "default",
    "label_placement": "top",
    "instruction_placement": "label",
    "hide_on_screen": "",
    "active": true,
    "description": "Configuration fields for HP React Widgets sales funnels.",
    "show_in_rest": 1
}

